                        <Button fx:id="partModifyButton" layoutX="260.0" layoutY="249.0" mnemonicParsing="false" onMouseClicked="#modifyPart" text="Modify" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="80.0">

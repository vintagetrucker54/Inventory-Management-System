                        <DropShadow offsetX="2.0" offsetY="2.0">
                           <color>
                              <Color opacity="0.5" />
                           </color>
                        </DropShadow>
                     </effect>
                  </Button>
                        <Button fx:id="productModifyButton" layoutX="260.0" layoutY="249.0" mnemonicParsing="false" onMouseClicked="#modifyProduct" text="Modify" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="80.0">
                     <effect>
                        <DropShadow offsetX="2.0" offsetY="2.0">
                           <color>
                              <Color opacity="0.5" />
                           </color>
                        </DropShadow>
                     </effect>
                  </Button>
                        <Button fx:id="productDeleteButton" layoutX="329.0" layoutY="249.0" mnemonicParsing="false" onMouseClicked="#deleteProduct" text="Delete" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="15.0">
                     <effect>
                        <DropShadow offsetX="2.0" offsetY="2.0">
                           <color>
                              <Color opacity="0.5" />
                           </color>
                        </DropShadow>
                     </effect>
                  </Button>
                        <TableView fx:id="productTableView" layoutX="14.0" layoutY="56.0" prefHeight="192.0" prefWidth="481.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="50.0">
